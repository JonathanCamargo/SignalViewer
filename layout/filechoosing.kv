<LoadDialog>:
    filechooser:filechooser_id
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser_id

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: self.parent.parent.parent.cancel_callback()

            Button:
                text: "Open"
                on_release: self.parent.parent.parent._open_callback()

<SaveDialog>:
    filechooser:filechooser_id
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser_id
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: self.parent.parent.parent.cancel_callback()

            Button:
                text: "Save"
                on_release: self.parent.parent.parent._save_callback()

<SelectDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            #on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                #on_release: root.cancel()

            Button:
                text: "Save"
                #on_release: root.save(filechooser.path, text_input.text)
