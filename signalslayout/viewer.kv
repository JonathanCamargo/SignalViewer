#:kivy 1.0.9

#:include customwidgets/text.kv

#:include customwidgets/plot.kv

<SignalViewer>:
    #Widget elements id
    signalselector: signalselector_id
    signaldisplay: signaldisplay_id
    cols: 1
    rows: 2
    padding: 10,10,10,10 
    size_hint_y: None
    height: self.parent.height
    canvas:
        Color:
            rgba:  bg_1
        Rectangle:
            size: self.size
            pos: self.pos
    # PLOTS
    SignalDisplay: 
        id: signaldisplay_id
        rows: 10
        cols: 10
        padding: 10,10,10,10
        size_hint_y: None
        height: self.parent.height * 0.7
        canvas:
            Color:
                rgba:  bg_2
            Rectangle:
                size: self.size
                pos: self.pos
        
    # SELECTOR
    SignalSelector:
        id: signalselector_id
        checkboxes: checkboxes_id
        filter_input: filter_input_id
        orientation: 'vertical'
        padding: 10,10,10,10
        canvas:
            Color:
                rgba:  bg_2
            Rectangle:
                size: self.size
                pos: self.pos
        center: self.parent.center
        top: root.top

        # FILTER BOX
        BoxLayout:
            orientation: 'horizontal'
            padding: 10,10,10,10 
            pos: self.parent.pos
            size_hint: 1,0.5
            canvas:
                Color:
                    rgba:  bg_1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                size_hint_x:0.2
                text:"Filter:"

            TextInput:
                id: filter_input_id
                font_size: 12
                canvas:
                multiline: False
                size_hint_y:1
                
        # CHECKBOXES
        GridLayout:
            id: checkboxes_id
            rows: 10
            cols: 10
            padding: 10,10,10,10
            canvas:
                Color:
                    rgba:  bg_2
                Rectangle:
                    size: self.size
                    pos: self.pos


                

       
